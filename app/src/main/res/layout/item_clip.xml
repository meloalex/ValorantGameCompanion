<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/news_card_vertical_margin"
    app:strokeWidth="@dimen/news_card_stroke_width"
    android:id="@+id/clipCard"
    app:strokeColor="@color/primary"
    android:layout_height="@dimen/news_card_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/thumnailImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        
        <com.google.android.material.card.MaterialCardView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/background_transparent"
            android:layout_height="@dimen/news_card_title">

            <TextView
                android:id="@+id/titleTextView"
                tools:text="Clip Title"
                android:paddingLeft="@dimen/news_card_vertical_margin"
                android:textSize="@dimen/chat_card_margin"
                android:textColor="@color/secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>